<%= form_for @activity_session, :html => { :class => "form-horizontal activity_session" } do |f| %>

  <% if @activity_session.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@activity_session.errors.count, "error") %> prohibited this activity_session from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @activity_session.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :session_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
       <%= f.collection_select :session_id , Session.all, :id, :name, prompt: "Nenhum" %>
    </div>
    <%=f.error_span(:session_id) %>
  </div>
  <div class="form-group">
    <%= f.label :activity_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
       <%= f.collection_select :activity_id , Activity.all, :id, :name, prompt: "Nenhum" %>
    </div>
    <%=f.error_span(:activity_id) %>
  </div>
  <div class="form-group">
    <%= f.label :member_team_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
       <%= f.collection_select :member_team_id , MemberTeam.all, :id, :name, prompt: "Nenhum" %>
    </div>
    <%=f.error_span(:member_team_id) %>
  </div>
  <div class="form-group">
    <%= f.label :student_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
       <%= f.collection_select :student_id , Student.all, :id, :name, prompt: "Nenhum" %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                activity_sessions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
