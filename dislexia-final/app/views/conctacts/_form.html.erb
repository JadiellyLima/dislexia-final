<%= form_for @conctact, :html => { :class => "form-horizontal conctact" } do |f| %>

  <% if @conctact.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@conctact.errors.count, "error") %> prohibited this conctact from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @conctact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>
  <div class="form-group">
    <%= f.label :menssagem, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :msg, :class => 'form-control' %>
    </div>
    <%=f.error_span(:msg) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'enviar', :class => 'btn btn-primary' %>
      <% if user_signed_in? %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                conctacts_path, :class => 'btn btn-default' %>
      <% end %>
    </div>
  </div>

<% end %>
